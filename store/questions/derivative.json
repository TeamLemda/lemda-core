{
    "meta": {
        "ledma_api_version": 0.1,
        "name": "derivative"
    },

    "generators": {
        "f": {
            "name": "blocks.generate_polynomial",
            "arguments": {
                "degree": 3,
                "variable": "x",
                "minimum": 1,
                "maximum": 10
            }
        },
        "f_latex": {
            "name": "blocks.poly_to_latex",
            "arguments": {
                "object": "{generators.f}"
            }
        },
        "f_tag": {
            "name": "blocks.differentiate",
            "arguments": {
                "function": "{generators.f}"
            }
        },
        "f_tag_latex": {
            "name": "blocks.poly_to_latex",
            "arguments": {
                "object": "{generators.f_tag}"
            }
        }
    },

    "checks": {
        "f_tag": {
            "name": "blocks.parse_polynomial",
            "arguments": {
                "response": "{view.f_tag}",
                "variable": "x"
            }
        },
        "eq": {
            "name": "blocks.polynomials_are_equal",
            "arguments": {
                "a": "{generators.f_tag}",
                "b": "{checks.f_tag}",
                "feedback_correct": "Correct!",
                "feedback_incorrect": "Incorrect!"
            }
        },
        "grade": {
            "name": "blocks.grade_from_bool",
            "arguments": {
                "is_correct": "{checks.eq.output}"
            }
        }
    },

    "view": {
        "f_tag": {
            "name": "views.function_field",
            "arguments": {
                "field_name": "f_tag",
                "function": "f'",
                "variable": "x",
                "correct": "{generators.f_tag_latex}",
                "feedback": "{checks.eq.feedback}",
                "validation_feedback": "{checks.f_tag.feedback}",
                "grade": "{checks.grade.output}"
            }
        },
        "view": {
            "name": "views.html",
            "arguments": {
                "content": "Derive the function [mathjaxinline]{generators.f_latex}[/mathjaxinline].<br /> {view.f_tag}",
                "grade": "{checks.grade.output}"
            }
        }
    }
}
